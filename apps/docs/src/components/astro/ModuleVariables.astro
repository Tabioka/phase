---
import { ModuleDefinitions } from "@repo/utils/modules"

import Code from "~/components/astro/mdx/Code.astro"
import LI from "~/components/astro/mdx/LI.astro"
import UL from "~/components/astro/mdx/UL.astro"

import type { ModuleId } from "@repo/utils/modules"

interface Props {
  moduleId: ModuleId
}

const { moduleId } = Astro.props

const definition = ModuleDefinitions[moduleId]
const variables = "variables" in definition ? definition.variables : undefined
---

<UL>
  {
    variables?.variables.map((variable) => {
      return (
        <LI>
          <Code>{`{${variable.name}}`}</Code> - {variable.description}
        </LI>
      )
    }) ?? null
  }
</UL>
