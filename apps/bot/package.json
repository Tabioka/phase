{
  "private": true,
  "name": "bot",
  "version": "3.28.0",
  "type": "module",
  "scripts": {
    "docker:build": "nixpacks build --name bot-image --current-dir ../../",
    "docker:start": "docker run -it --rm bot-image",
    "dev": "NODE_ENV=development bun run --watch src/main.ts",
    "build": "bun run scripts/build.ts",
    "start": "NODE_ENV=production bun run --smol .phase/src/main.js",
    "preview": "bun run build && bun run start",
    "lint": "eslint ."
  },
  "dependencies": {
    "@octokit/rest": "^20.1.1",
    "@phasejs/builders": "workspace:*",
    "@phasejs/core": "workspace:*",
    "@phasejs/image": "workspace:*",
    "@phasejs/loaders": "workspace:*",
    "@phasejs/logs": "workspace:*",
    "@plugin/blacklist": "workspace:*",
    "@plugin/emoji-sync": "workspace:*",
    "@plugin/music": "workspace:*",
    "@plugin/voice": "workspace:*",
    "@repo/config": "workspace:*",
    "@repo/db": "workspace:*",
    "@repo/env": "workspace:*",
    "@repo/trpc": "workspace:*",
    "@repo/utils": "workspace:*",
    "@twurple/api": "^7.2.1",
    "@twurple/auth": "^7.2.1",
    "change-case": "^5.4.4",
    "dedent": "^1.5.3",
    "discord.js": "^14.17.3",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "ms": "^3.0.0-canary.1",
    "ts-mixer": "^6.0.4",
    "tw-to-css": "^0.0.12",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/react": "^19.0.7",
    "chalk": "^5.4.1",
    "tailwindcss": "^3.4.17"
  },
  "peerDependencies": {
    "@distube/ytdl-core": "^4.15.8"
  }
}
