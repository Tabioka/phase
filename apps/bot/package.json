{
  "private": true,
  "name": "bot",
  "type": "module",
  "scripts": {
    "docker:build": "nixpacks build --name bot-image --current-dir ../../",
    "docker:start": "docker run -it --rm bot-image",
    "dev": "NODE_ENV=development bun run --watch src/main.ts",
    "build": "tsc",
    "start": "NODE_ENV=production bun run --smol src/main.ts",
    "preview": "bun run build && bun run start",
    "lint": "eslint ."
  },
  "dependencies": {
    "@discordjs/opus": "^0.9.0",
    "@discordjs/voice": "^0.17.0",
    "@distube/youtube": "^1.0.4",
    "@distube/ytdl-core": "^4.15.1",
    "@octokit/rest": "^20.1.1",
    "@phasejs/core": "workspace:*",
    "@repo/config": "workspace:*",
    "@repo/database": "workspace:*",
    "@repo/env": "workspace:*",
    "@repo/image": "workspace:*",
    "@repo/utils": "workspace:*",
    "@twurple/api": "^7.2.0",
    "@twurple/auth": "^7.2.0",
    "change-case": "^5.4.4",
    "dedent": "^1.5.3",
    "discord.js": "^14.16.3",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "ms": "^3.0.0-canary.1",
    "node-gyp": "^10.2.0",
    "openmeteo": "^1.1.4",
    "sodium-native": "^4.3.1",
    "tailwindcss": "^3.4.15",
    "ts-mixer": "^6.0.4",
    "tw-to-css": "^0.0.12",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/bun": "^1.1.13",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/ms": "^0.7.34",
    "@types/react": "npm:types-react@19.0.0-rc.1",
    "distube": "^5.0.4",
    "eslint": "^9.15.0",
    "typescript": "^5.6.3"
  },
  "overrides": {
    "@types/react": "npm:types-react@19.0.0-rc.1"
  }
}
