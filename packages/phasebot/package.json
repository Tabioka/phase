{
  "name": "phasebot",
  "description": "A simple framework for building and running discord bots",
  "version": "0.9.1",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup ./src/index.ts ./src/builders/* --clean --dts --format=esm --sourcemap",
    "dev": "tsup ./src/index.ts ./src/builders/* --clean --dts --format=esm --sourcemap --watch"
  },
  "bin": {
    "phase": "dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./builders": {
      "import": "./dist/builders/index.js",
      "require": "./dist/builders/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "keywords": [
    "discord",
    "discordjs",
    "bot",
    "framework",
    "client",
    "bun"
  ],
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/notcharliee/phase.git"
  },
  "dependencies": {
    "@repo/config": "workspace:*",
    "@vercel/og": "^0.6.2",
    "ansi-escapes": "^7.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "croner": "^8.0.2",
    "dedent": "^1.5.3",
    "discord.js": "^14.15.3",
    "gradient-string": "^2.0.2",
    "lodash.clonedeep": "^4.5.0",
    "ora": "^8.0.1",
    "ts-mixer": "^6.0.4",
    "tsup": "^8.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@schemastore/package": "^0.0.10",
    "@types/bun": "^1.1.5",
    "@types/gradient-string": "^1.1.6",
    "@types/lodash.clonedeep": "^4.5.9",
    "typescript": "^5.5.2"
  },
  "peerDependencies": {
    "discord.js": "^14.x.x"
  }
}
