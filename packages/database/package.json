{
  "private": true,
  "name": "@repo/database",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "tsup ./src/index.ts --clean --dts --format=esm --sourcemap=inline",
    "dev": "tsup ./src/index.ts --clean --dts --format=esm --sourcemap=inline --watch",
    "genkey": "bun --print 'require(`src/utils.ts`).generateKey()'"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "main": "./dist/index.js",
      "module": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "dependencies": {
    "@repo/config": "workspace:*",
    "@repo/utils": "workspace:*",
    "mongoose": "^8.1.0",
    "tsup": "^8.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.9",
    "typescript": "^5.3.2"
  }
}
