{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "cache": true,
      "env": ["*"],
      "dependsOn": ["^build"],
      "outputs": [
        "build/**",
        "!build/cache/**",
        ".phase/**",
        ".contentlayer/**",
        "dist/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["*"]
    }
  },
  "remoteCache": {
    "enabled": true
  }
}
