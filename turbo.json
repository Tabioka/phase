{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "@repo/config#build": {
      "cache": true,
      "dependsOn": [],
      "outputs": ["dist/**"],
      "env": ["!*"]
    },
    "bot#build": {
      "cache": true,
      "dependsOn": ["@repo/config#build", "^build"],
      "outputs": [".tsc/**"],
      "env": [
        "MONGODB_URI",
        "POSTGRES_URI",
        "DISCORD_*",
        "TWITCH_*",
        "AUTH_*",
        "BRIDGE_*",
        "WEBHOOK_*"
      ]
    },
    "site#build": {
      "cache": true,
      "dependsOn": ["@repo/config#build", "^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "MONGODB_URI",
        "POSTGRES_URI",
        "DISCORD_*",
        "TWITCH_*",
        "AUTH_*",
        "BRIDGE_*",
        "WEBHOOK_*"
      ]
    },
    "build": {
      "cache": true,
      "dependsOn": ["@repo/config#build", "^build"],
      "outputs": ["dist/**"],
      "env": ["!*"]
    },
    "lint": {
      "cache": true,
      "dependsOn": ["@repo/config#build", "^build"],
      "passThroughEnv": ["SKIP_ENV_VALIDATION"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["*"]
    }
  },
  "remoteCache": {
    "enabled": true
  }
}
