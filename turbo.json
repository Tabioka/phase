{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "bot#build": {
      "cache": true,
      "dependsOn": ["^build"],
      "outputs": [".phase/**"],
      "passThroughEnv": ["TURBO_*"],
      "env": [
        "MONGODB_URI",
        "POSTGRES_URI",
        "DISCORD_*",
        "TWITCH_*",
        "AUTH_*",
        "BRIDGE_*",
        "WEBHOOK_*"
      ]
    },
    "docs#build": {
      "cache": true,
      "dependsOn": ["^build"],
      "outputs": [".astro/**", "!.astro/cache/**"],
      "passThroughEnv": ["TURBO_*"],
      "env": []
    },
    "dashboard#build": {
      "cache": true,
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "passThroughEnv": ["TURBO_*"],
      "env": [
        "MONGODB_URI",
        "POSTGRES_URI",
        "DISCORD_*",
        "TWITCH_*",
        "AUTH_*",
        "BRIDGE_*",
        "WEBHOOK_*"
      ]
    },
    "www#build": {
      "cache": true,
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "passThroughEnv": ["TURBO_*"],
      "env": [
        "MONGODB_URI",
        "POSTGRES_URI",
        "DISCORD_*",
        "TWITCH_*",
        "AUTH_*",
        "BRIDGE_*",
        "WEBHOOK_*"
      ]
    },
    "build": {
      "cache": true,
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "passThroughEnv": ["TURBO_*"]
    },
    "lint": {
      "cache": true,
      "dependsOn": ["^build"],
      "passThroughEnv": ["SKIP_ENV_VALIDATION"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^build"],
      "persistent": true,
      "env": ["*"]
    },
    "start": {
      "cache": false,
      "dependsOn": ["build"],
      "persistent": true,
      "env": ["*"]
    }
  },
  "remoteCache": {
    "enabled": true
  }
}
