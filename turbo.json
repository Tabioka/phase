{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "cache": true,
      "env": ["*"],
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", ".tsc/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["*"]
    },
    "lint": {
      "cache": true,
      "dependsOn": ["^build"],
      "passThroughEnv": ["SKIP_ENV_VALIDATION"]
    }
  },
  "remoteCache": {
    "enabled": true
  }
}
