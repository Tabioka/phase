{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "bun run bot:build",
    "nixpacksPlan": {
      "providers": ["node"],
      "phases": {
        "install": {
          "dependsOn": ["setup"],
          "cmds": ["bun install"]
        }
      }
    }
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "bun run bot:dev",
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 100
  }
}