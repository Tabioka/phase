{
  "private": true,
  "packageManager": "bun@1.1.3",
  "name": "phase-monorepo",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "bot:build": "turbo run build --filter=bot --color",
    "bot:dev": "turbo run dev --filter=bot --color",
    "bot:start": "cd apps/bot && bun run start",
    "site:build": "turbo run build --filter=site --color",
    "site:dev": "turbo run dev --filter=site --color",
    "site:start": "cd apps/site && bun run start",
    "phasebot:build": "turbo run build --filter=phasebot --color",
    "phasebot:dev": "turbo run dev --filter=phasebot --color",
    "schemas:build": "turbo run build --filter=@repo/schemas --color",
    "schemas:dev": "turbo run dev --filter=@repo/schemas --color"
  },
  "dependencies": {
    "turbo": "^1.12.2"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.12"
  },
  "trustedDependencies": [
    "@vercel/speed-insights",
    "bcrypt",
    "contentlayer",
    "esbuild",
    "phasebot",
    "protobufjs",
    "sharp"
  ]
}
